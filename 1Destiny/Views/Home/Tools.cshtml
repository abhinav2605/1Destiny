@model IEnumerable<_1Destiny.Models.DB_Resource>
@{
    ViewBag.Title = "Tools";
}

<h3>Tools</h3>
@foreach (var item in Model)
{
<button class="button1" style="vertical-align:middle">
    <span>
        <a href="@item.ResourceLink" target="_blank"> @item.ResourceName </a>
    </span>
</button>
}

<script>
    $(document).ready(function () {
        $(".w3-bar-block a").removeClass("w3-blue");
        $(".w3-bar-block a:nth-child(4)").addClass("w3-blue");
    });
</script>